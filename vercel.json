{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "chatbot-ui/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "chatbot-ui/public/widget.js",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/widget\\.js$",
      "dest": "chatbot-ui/public/widget.js"
    },

    {
      "src": "^/api/(.*)$",
      "dest": "api/main.py"
    },

    {
      "src": "^/$",
      "dest": "chatbot-ui/dist/index.html"
    },

    {
      "src": "^/embed$",
      "dest": "chatbot-ui/dist/index.html"
    },

    {
      "handle": "filesystem"
    },

    {
      "src": "/.*",
      "dest": "chatbot-ui/dist/index.html"
    }
  ]
}
